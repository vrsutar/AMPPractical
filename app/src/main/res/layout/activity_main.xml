<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PracticalIndex">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/home_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorPrimary"
        android:elevation="3dp"
        app:title="AMP Practicals"
        app:titleTextColor="#FFFFFF" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/home_activity_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/practical_1_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Practical 1"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/practical_2_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Practical 2"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/practical_3_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Practical 3"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:id="@+id/practical_3_sub_practicals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/practical_3_1_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="3.1"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/practical_3_2_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="3.2"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/practical_3_3_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="3.3"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/practical_3_4_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="3.4"
                    tools:ignore="HardcodedText" />


            </LinearLayout>

            <Button
                android:id="@+id/practical_4_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Practical 4"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/practical_5_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Practical 5"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/practical_6_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Practical 6"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/practical_7_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Practical 7"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/practical_8_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Practical 8"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/practical_9_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Practical 9"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/practical_10_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Practical 10"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>